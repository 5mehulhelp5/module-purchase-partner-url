<script>
    require(['Magenable_PurchasePartnerUrl/google-analytics'], function(magenableGa) {
        magenableGa(
            <?= $escaper->escapeJs($viewModel->analyticsIsEnabled()) ?>,
            <?= $escaper->escapeJs($viewModel->isOpenLinkInNewTab()) ?>
        );
    });
