            data-event-category="<?= $escaper->escapeHtmlAttr($eventCategory) ?>"
            data-event-action="<?= $escaper->escapeHtmlAttr($eventAction) ?>"
            data-event-value="<?= $escaper->escapeHtmlAttr($block->getEventValue()) ?>">
